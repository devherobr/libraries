{
  "packages": ["examples/**", "adapters/**", "model/**"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "ignoreChanges": ["**/test/**", "**/*.md"],
    "publish": {
      "allowBranch": ["master"],
      "commitHooks": false,
      "conventionalCommits": true,
      "access": "public",
      "message": "chore(release): publish [skip-ci]"
    },
    "version": {
      "allowBranch": ["master"],
      "commitHooks": false,
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): version [skip-ci]"
    }
  },
  "changelog": {
    "repo": "devherobr/sdk",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  }
}
