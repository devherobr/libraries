{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm",
  "command": {
    "ignoreChanges": ["**/test/**", "**/*.md"],
    "publish": {
      "commitHooks": false,
      "conventionalCommits": true,
      "access": "public",
      "allowBranch": ["master"],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): version %s [skip ci]"
    }
  },
  "changelog": {
    "repo": "devherobr/libraries",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  }
}
